{
  "name": "vue-widgets",
  "description": "WordPress widgets created with VueJS",
  "version": "1.0.0",
  "author": "Josh Pollock <josh@calderawp.com>",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": ["src", "test"],
      "extensions": "js,jsx,scss,vue"
    }
  },
  "dependencies": {
    "vue": "^2.2.6",
    "wpapi": "^1.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-latest": "^6.0.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.9.0",
    "node-sass": "^4.5.0",
    "npm-watch": "^0.2.0",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "sass-loader": "^5.0.1",
    "vue-loader": "^11.1.4",
    "vue-template-compiler": "^2.2.1",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  }
}
